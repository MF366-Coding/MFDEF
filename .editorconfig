[*.{cs,vb}]

# IDE0028: Simplify collection initialization
dotnet_style_collection_initializer = false:suggestion
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_prefer_auto_properties = false:silent
dotnet_style_object_initializer = false:silent
dotnet_style_operator_placement_when_wrapping = beginning_of_line
tab_width = 4
indent_size = 4
end_of_line = crlf
dotnet_style_prefer_collection_expression = never:suggestion

[*.cs]
#### Naming styles ####

# Naming rules

dotnet_naming_rule.interface_should_be_begins_with_i.severity = error
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_begins_with_i.style = begins_with_i

dotnet_naming_rule.pascal_case_should_be_pascalcase.severity = error
dotnet_naming_rule.pascal_case_should_be_pascalcase.symbols = pascal_case
dotnet_naming_rule.pascal_case_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.constant_should_be_constant_case.severity = error
dotnet_naming_rule.constant_should_be_constant_case.symbols = constant
dotnet_naming_rule.constant_should_be_constant_case.style = constant_case

dotnet_naming_rule.camel_case_should_be_camelcase.severity = warning
dotnet_naming_rule.camel_case_should_be_camelcase.symbols = camel_case
dotnet_naming_rule.camel_case_should_be_camelcase.style = camelcase

